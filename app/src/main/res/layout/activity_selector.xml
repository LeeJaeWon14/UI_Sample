<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SelectorActivity">

    <Button
        android:id = "@+id/btn_ripple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_mask"
        android:textColor="@color/text_selector_black"
        android:layout_centerInParent="true"
        android:text = "ripple" />

    <Button
        android:id = "@+id/btn_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_ripple"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_button_sample"
        android:textColor="@color/text_selector"
        android:text = "selector"/>
</RelativeLayout>