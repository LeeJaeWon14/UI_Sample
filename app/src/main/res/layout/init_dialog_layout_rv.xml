<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity = "center"
    android:background="@color/white">
    <RadioGroup
        android:id="@+id/rg_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <RadioButton
            android:id="@+id/rb_linear_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L_수평" />
        <RadioButton
            android:id="@+id/rb_linear_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L_수직" />
        <RadioButton
            android:id="@+id/rb_grid_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="G_수평" />
        <RadioButton
            android:id="@+id/rb_grid_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="G_수직" />
    </RadioGroup>
    <EditText
        android:id = "@+id/edt_inputCount"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint = "@string/str_edit_count"
        android:textAlignment="center"
        android:textStyle="bold" />
    <Button
        android:id = "@+id/btn_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "@string/str_button_input"
        android:textStyle="bold"/>
</LinearLayout>